{
  "roles": {
    "founder": ["repo:admin", "treasury:admin", "governance:admin", "ui:founder", "module:*:admin"],
    "citizen": [
      "ui:citizen",
      "module:map-of-pi:view",
      "module:wallet:view",
      "module:schools:view",
      "module:sports:view",
      "module:healthcare:view",
      "petition:sign"
    ],
    "merchant": [
      "ui:merchant",
      "module:civic-accounts:invoice",
      "module:wallet:merchant",
      "module:mall:lease",
      "module:hotel:manage",
      "petition:sign"
    ],
    "auditor": [
      "ui:auditor",
      "core:treasury:read",
      "core:petitions:read",
      "governance:incidents:read",
      "governance:audit:write",
      "petition:review"
    ],
